# Build stage
FROM node:22-bookworm-slim AS builder
WORKDIR /app
COPY package*.json ./
RUN npm ci
COPY . .

ARG VITE_API_URL
ARG VITE_ADULT_FEE
ARG VITE_CHILD_FEE
ARG VITE_STUDENT_FEE
ARG VITE_MAX_FILE_SIZE
ARG VITE_JWT_TOKEN_KEY

ENV VITE_API_URL=$VITE_API_URL
ENV VITE_ADULT_FEE=$VITE_ADULT_FEE
ENV VITE_CHILD_FEE=$VITE_CHILD_FEE
ENV VITE_STUDENT_FEE=$VITE_STUDENT_FEE
ENV VITE_MAX_FILE_SIZE=$VITE_MAX_FILE_SIZE
ENV VITE_JWT_TOKEN_KEY=$VITE_JWT_TOKEN_KEY

RUN npm run build

# Production stage
FROM caddy:2
COPY --from=builder /app/dist /srv